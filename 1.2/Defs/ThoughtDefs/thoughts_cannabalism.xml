    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <requiredTraits>
      <li>Cannibal</li>
    </requiredTraits>
    <stages>
      <li>
        <label>cooked cannibalism</label>
        <description>I ate a meal made from the meat of another avali. It was ok, but I think it might've tasted better raw.</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>AvaliAteAvaliAsIngredient</defName>
