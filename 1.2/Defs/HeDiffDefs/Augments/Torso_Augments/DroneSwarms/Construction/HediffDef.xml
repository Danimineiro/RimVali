<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="ImplantHediffBase">
    <defName>DroneConstruction</defName>
    <label>Micro drone swarm (Construction)</label>
    <description>This augment produces a swarm of micro-drones, dedicated to assisting in one singular task. In this case, it's construction.</description>
    <spawnThingOnRemoved>DroneConstruction</spawnThingOnRemoved>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <statOffsets>
          <ConstructionSpeed>0.4</ConstructionSpeed>
          <FixBrokenDownBuildingSuccessChance>0.2</FixBrokenDownBuildingSuccessChance>
          <ConstructSuccessChance>0.2</ConstructSuccessChance>
          <SmoothingSpeed>0.4</SmoothingSpeed>
        </statOffsets>
      </li>
    </stages>
    <comps>
    </comps>
  </HediffDef>
</Defs>