<Defs>
 <!-- SpecOps armor -->
<ThingDef ParentName="ArmorMachineableBase">
    <defName>AvaliSpecOpsArmor</defName>
     <thingCategories>
      <li>AvaliArmor</li>
      <li>Apparel</li>
    </thingCategories>     
    <label>Avali spec ops armor</label>
    <description>A combat suit. [placeholder]</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>AvaliSpecOpsArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>13</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>avali/Things/Apparel/SpecOps/spec_ops_Avali_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>21000</WorkToMake>
      <MaxHitPoints>10000</MaxHitPoints>
      <Mass>1.5</Mass>
      <Flammability>0.02</Flammability>
      <EquipDelay>4</EquipDelay>
      <ArmorRating_Sharp>2.06</ArmorRating_Sharp>
      <ArmorRating_Blunt>2.6</ArmorRating_Blunt>
      <ArmorRating_Heat>2.1</ArmorRating_Heat>
      <Insulation_Cold>20</Insulation_Cold>
      <Insulation_Heat>20</Insulation_Heat>
    </statBases>
    
    <equippedStatOffsets>
      <ToxicSensitivity>-0.5</ToxicSensitivity>
      <ShootingAccuracyPawn>3</ShootingAccuracyPawn>
      <MoveSpeed>-0.2</MoveSpeed>
      <SocialImpact>-2.5</SocialImpact>
       <ComfyTemperatureMin>-5</ComfyTemperatureMin>
       <ComfyTemperatureMax>5</ComfyTemperatureMax>
       <Flammability>-2</Flammability>
    </equippedStatOffsets>
    <costList>
     <ComponentIndustrial>10</ComponentIndustrial>
      <ComponentSpacer>5</ComponentSpacer>
      <Plasteel>45</Plasteel>
      <AeroTungstenCarbide>70</AeroTungstenCarbide>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <tags>
        <li>Avali</li>
        <li>AvaliArmor</li>
        <li>AvaliSpecOps</li>
      </tags>
      <wornGraphicPath>avali/Things/Apparel/SpecOps/spec_ops</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.5,0.5,0.5,1)</max>
        </li>
      </options>
    </colorGenerator>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>
  
  
