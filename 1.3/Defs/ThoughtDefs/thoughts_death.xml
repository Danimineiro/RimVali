    <stackLimit>10</stackLimit>
    <durationDays>30</durationDays>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <stages>
      <li>
        <label>My packmate {0} died.</label>
        <description>One of my packmates died...</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
      <li>
        <label>{0} died.</label>
        <description>I still miss my packmate. I wish they didn't die.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef ParentName="DeathMemoryFamily">
    <defName>AvaliKitDied</defName>
