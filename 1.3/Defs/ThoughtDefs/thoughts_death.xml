      <li>
        <label>My kit {0} died.</label>
        <description>My kit died.</description>
        <baseMoodEffect>-30</baseMoodEffect>
      </li>
    </stages>  
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>MateDied</defName>
    <stages>
      <li>
        <label>Mate {0} died.</label>
        <description>I am alone.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
