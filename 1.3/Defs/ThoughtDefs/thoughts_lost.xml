      <li>
        <label>My mate {0} is missing</label>
        <description>My mate is missing.. I hope they'll return soon.</description>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef ParentName="LostMemoryFamily">
    <defName>MyParentLost</defName>
    <stages>
      <li>
        <label>My parent {0} is missing</label>
