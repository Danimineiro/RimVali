    </stages>
  </ThoughtDef>
  
  <ThoughtDef ParentName="LostMemory">
    <defName>PackmateLost</defName>
    <durationDays>20</durationDays>
    <stackLimit>50</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>My packmate {0} is missing</label>
        <description>My packmate is missing... the world just isn't the same without them.</description> 
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
