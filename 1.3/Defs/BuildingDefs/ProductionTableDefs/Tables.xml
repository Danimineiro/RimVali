<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Nano-Forge -->

  <ThingDef ParentName="BenchBase">
    <defName>AvaliNanoForge</defName>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories Inherit="false">
      <li>BuildingsProduction</li>
    </thingCategories>
    <label>Avali Nano-Printing Forge</label>
    <description>The Avali Nano-Printing Forge is perhaps the bulk of any Avali operation. Utilizing immense heat and nano-technologies, this workbench is capable of changing the structure and sometimes even the composition of certain molecules. As such this workbench is primarily purposed to prepare raw resources for future printing or to print metallic gear with.</description>
    <size>(3,1)</size>
    <thingClass>Building_WorkTable</thingClass>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <recipes>
      <li>MakeBFGSabot</li>

      <li>RimValiPowderTungsten</li>
      <li>RimValiPowderTungstenTwo</li>
      <li>RimValiPowderTungstenThree</li>

      <li>RimValiPrintAerogel</li>
      <li>RimValiPrintAerogelTwo</li>
      <li>RimValiPrintAerogelThree</li>

      <li>ForgeAeroTungsten</li>
      <li>ForgeAeroTungstenTwo</li>
      <li>ForgeAeroTungstenThree</li>

      <li>RefineAvaliCarbon</li>
      <li>RefineAvaliCarbonTwo</li>
      <li>RefineAvaliCarbonThree</li>
    </recipes>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <costList>
      <Steel>100</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <researchPrerequisites>
      <li>ResearchNanoForge</li>
    </researchPrerequisites>
    <graphicData>
      <texPath>avali/buildings/production/nanoforge</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,2)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Flammability>0</Flammability>
      <WorkTableWorkSpeedFactor>1.42</WorkTableWorkSpeedFactor>
    </statBases>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>250</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <fillPercent>1</fillPercent>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Production</designationCategory>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
  </ThingDef>

  <!-- Research bench -->

  <ThingDef ParentName="BenchBase">
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories Inherit="false">
      <li>BuildingsProduction</li>
    </thingCategories>
    <defName>AvaliResearchBench</defName>
    <label>Avali Research bench</label>
    <description>An Avali research bench equiped with a single-color LASER array and a basic operating system. Whilst a lot of trivial Avali tech is already floating around on the Rimworld, a lot designs are either unfit for usage in this enviroment or instead jealously guarded by opposing factions. As such this table is used by Rimworld Avali researchers to decrypt and alter designs for proper usage within the colony.</description>
    <thingClass>Building_ResearchBench</thingClass>
    <size>(3,2)</size>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <costList>
      <Steel>100</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <graphicData>
      <texPath>avali/buildings/production/avaliresearchtable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(4,5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <ResearchSpeedFactor>1.0</ResearchSpeedFactor>
      <WorkTableWorkSpeedFactor>1.42</WorkTableWorkSpeedFactor>
    </statBases>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>250</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>MultiAnalyzer</li>
          <li>AvaliNexus</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <fillPercent>0.5</fillPercent>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Production</designationCategory>
    <surfaceType>Item</surfaceType>
    <designationHotKey>Misc4</designationHotKey>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>BasicRimValiTech</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>AvaliNexus</defName>
    <label>Illuminate Nexus Connection</label>
    <description>The Illuminate Nexus Connection utilizes a rare material known as a Sync Crystal to communicate with the Nexus through their strange properties regarding quantum entanglement. Due to their widespread integration into Avali Illuminate society, these large connections are only given to colonies that seem to be strong enough to protect themselves, allowing them access to higher techs aswell.</description>
    <graphicData>
      <texPath>avali/buildings/production/sync_crystal</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>3</drawSize>
    </graphicData>
    <size>(3,3)</size>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <minifiedDef>MinifiedThing</minifiedDef>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>10000</WorkToBuild>
      <Mass>60</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>8</glowRadius>
        <glowColor>(236, 166, 245)</glowColor>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.1</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>2</maxSimultaneous>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
  </ThingDef>

  <!-- Nano-loom -->
  <ThingDef ParentName="BenchBase">
    <minifiedDef>MinifiedThing</minifiedDef>
    <defName>AvaliNanoLoom</defName>
    <label>Avali Nano-Printing Loom</label>
    <thingCategories Inherit="false">
      <li>BuildingsProduction</li>
    </thingCategories>
    <description>The Avali Nano-loom is a highly prized piece of machinery within the Avali Rimworld colonies. Making use of nanotechnology, this loom is able to weave strands of polymer fabrics that are a lot more robust than usual fabrics of the same material. This allows Avali colonies to create more sturdy clothing and tents when compared to their competitors.</description>
    <size>(2,1)</size>
    <thingClass>Building_WorkTable</thingClass>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <recipes>
      <li>WeaveFerroweave</li>
      <li>WeaveFerroweaveTwo</li>
      <li>WeaveFerroweaveThree</li>
      <li>WeaveNanoFiber</li>
      <li>WeaveNanoFiberTwo</li>
      <li>WeaveNanoFiberThree</li>
      <li>WeaveAeroTungstenFiber</li>
      <li>WeaveNanoCarbonFiberThree</li>
      <li>WeaveNanoCarbonFiberTwo</li>
      <li>WeaveNanoCarbonFiber</li>
    </recipes>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <costList>
      <Steel>100</Steel>
      <ComponentSpacer>2</ComponentSpacer>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <researchPrerequisites>
      <li>ResearchNanoLoom</li>
    </researchPrerequisites>
    <graphicData>
      <texPath>avali/buildings/production/loom/loom</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,1.8)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Flammability>0</Flammability>
      <WorkTableWorkSpeedFactor>1.42</WorkTableWorkSpeedFactor>
    </statBases>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>250</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <fillPercent>1</fillPercent>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Production</designationCategory>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
  </ThingDef>

</Defs>
